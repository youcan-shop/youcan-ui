{
  "name": "@youcan/ui-core",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "author": "YouCan <tech@youcan.shop> (https://github.com/youcan-shop/)",
  "homepage": "https://github.com/youcan-shop/youcan-ui",
  "keywords": [
    "youcan",
    "ui"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./tokens": {
      "require": "./dist/tokens.css",
      "import": "./dist/tokens.css"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build-tokens": "node tooling/transform.mjs",
    "build": "unbuild && pnpm build-tokens"
  },
  "devDependencies": {
    "typescript": "4.8.2",
    "unbuild": "^1.0.2"
  },
  "unbuild": {
    "entries": [
      "./src/index"
    ],
    "outDir": "dist",
    "declaration": true,
    "rollup": {
      "emitCJS": true
    },
    "failOnWarn": false
  }
}
