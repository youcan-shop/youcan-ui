{
  "name": "@youcan/ui-core",
  "type": "module",
  "version": "2.5.8-beta.3",
  "description": "",
  "author": "YouCan <tech@youcan.shop> (https://github.com/youcan-shop/)",
  "homepage": "https://github.com/youcan-shop/youcan-ui",
  "keywords": [
    "youcan",
    "ui"
  ],
  "exports": {
    ".": {
      "require": {
        "default": "./dist/index.cjs",
        "types": "./dist/index.d.ts"
      },
      "import": {
        "default": "./dist/index.mjs",
        "types": "./dist/index.d.ts"
      }
    },
    "./tokens": {
      "require": "./dist/tokens.css",
      "import": "./dist/tokens.css"
    },
    "./tokens.json": {
      "require": "./dist/tokens.json",
      "import": "./dist/tokens.json"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build-tokens": "node tooling/transform.mjs && cp ./tooling/tokens.json ./dist/tokens.json",
    "build": "unbuild && pnpm build-tokens",
    "release": "pnpm publish --access public"
  },
  "dependencies": {
    "ramda": "^0.28.0"
  },
  "devDependencies": {
    "@types/ramda": "^0.28.20",
    "fs-extra": "^11.1.0",
    "typescript": "4.8.2",
    "unbuild": "^1.0.2"
  },
  "unbuild": {
    "entries": [
      "./src/index"
    ],
    "outDir": "dist",
    "declaration": true,
    "rollup": {
      "emitCJS": true
    },
    "failOnWarn": false
  }
}
